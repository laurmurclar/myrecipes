<%= render 'shared/page_title', title: @recipe.name %>

<div class="row">
  <div class="col-md-8">
    <%= link_to "Edit Recipe", edit_recipe_path, class: "btn btn-success pull-right" %>
    <h3><%= @recipe.summary %></h3>
    <div class="well">
      <p><strong>
        Steps:
      </strong></p>
      <p><%= simple_format(@recipe.description) %></p>
    </div>
  </div>

  <div class="col-md-4 pull-right center">
    <%= gravatar_for @recipe.chef, size: 200 %>
    <h3><%= @recipe.chef.chefname %></h3>
  </div>
</div>

<h5><%= link_to "Return to Recipes listing", recipes_path, class: "btn btn-warning btn-small"%></h5>
